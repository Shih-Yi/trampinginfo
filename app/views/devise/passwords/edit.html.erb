<div class="container ">
  <div class="row">
    <div class="login-container col-lg-4 col-md-6 col-sm-8 col-xs-12">
      <div class="login-title text-center">
        <h2><span><%= link_to 'TracksInfo', root_path %></span></h2>
      </div>
      <div class="login-content">
        <div class="login-header">
          <h3><strong>Change your password</strong></h3>
        </div>
        <div class="login-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <div class="pos-r">
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="pos-r">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-primary form-control"><strong>Reset Password</strong></button>
            </div>

          <% end %>
        </div> <!-- end  login-body -->
      </div><!-- end  login-content -->
      <div class="login-footer text-center template">
        <%= render "devise/shared/links" %>
      </div>
    </div>  <!-- end  login-container -->
  </div>
</div><!-- end container -->
