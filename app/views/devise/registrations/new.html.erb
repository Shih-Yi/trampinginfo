<div class="container ">
  <div class="row">
    <div class="login-container col-xl-4 col-lg-5 col-md-6 col-sm-8 col-xs-12">
      <div class="login-title text-center">
        <h2><span><%= link_to 'TracksInfo', root_path %></span></h2>
      </div>
      <div class="login-content">
        <div class="login-header ">
          <h4><strong>Sign up</strong></h4>
        </div>
        <div class="login-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group ">
              <div class="pos-r">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="pos-r">
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password of 6 characters or more", class: "form-control" %>
              </div>
            </div>
            <% if false %>
              <div class="form-group">
                <div class="pos-r">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "form-control" %>
                </div>
              </div>
            <% end %>
            <div class="form-group">
              <button type="submit" class="form-btn form-btn-login">
                <span>Sign up</span>
              </button>
            </div>
          <% end %>
          <%= link_to "Continue with Facebook", user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-facebook" %>
        </div>
        <div class="login-footer text-center template">
          <%= render "devise/shared/links" %>
        </div>
        <!-- end  login-body -->
      </div><!-- end  login-content -->
    </div>  <!-- end  login-container -->
  </div>
</div><!-- end container -->
