<div class="container">
  <div class="row">
    <div class="col-md-7 banner">
      <h1><span class="text-red">TracksInfo</span> </h1>
    </div>
  </div>
  <%= form_tag '/', method: :get do %>
      <div class="row">
          <div class="col-md-6">
              <%= text_field_tag :search, params[:search], placeholder: "What are you looking for?", class: "form-control", id:"autolocation"%>
          </div>
      </div>

      <br/><br/>

      <div class="row">
          <div class="col-md-4 col-md-offset-4">
              <%= submit_tag "Search", class: "btn btn-normal btn-block"%>
          </div>
      </div>
  <% end %>
  <br /><hr /><br />

  <div><h3>Tracks</h3></div>
  <br />

  <div class="row">
  </div>
</div>
